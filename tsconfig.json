{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "allowJs": true,
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./components/*"],
      "@assets/*": ["./assets/*"],
      "@hooks/*": ["./hooks/*"],
      "@utils/*": ["./utils/*"],
      "@views/*": ["./views/*"],
      "@providers/*": ["./providers/*"],
      "@constants/*": ["./constants/*"],
      "@type/*": ["./type/*"],
      "@services/*": ["./services/*"],
      "@context/*": ["./context/*"]
    },

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true

    
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }],
  
}
